<% layout("./layouts/boilerplate") %>
<h1>List of all Campgrounds</h1>
<section class="d-flex flex-wrap">
    <% for(let campground of campgrounds) { %>
    <div class="card mx-2 my-3" style="width: 18rem;">
        <img src="<%= campground.images[0].url %>" class="card-img-top img-fluid">
        <div class="card-body">
            <h5 class="card-title"><%= campground.name %></h5>
            <p class="card-text"><%= campground.description %></p>
        </div>
        <ul class="list-group list-group-flush">
            <li class="list-group-item text-bold"><%= campground.location %></li>
            <li class="list-group-item"><strong>$<%= campground.price %></strong></li>
        </ul>
        <div class="card-body">
            <a href="/campgrounds/<%= campground.id %>" class="btn btn-primary">More Info</a>
        </div>
    </div>
    <% } %>
</section>